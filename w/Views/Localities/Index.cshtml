@model IEnumerable<ORM.DC_Maestros.Locality>

@{
    ViewBag.Title = @Localization.es_DO.Localities;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localization.es_DO.Localities</h2>

<p>
    @Html.ActionLink(@Localization.es_DO.Actions_Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocalityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region.RegionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedToUserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Localities", new { id = @item.LocalityId })">@item.LocalityName</a>
            </td>
            <td>
                <a href="@Url.Action("Details", "Regions", new { id = @item.RegionId })">@item.Region.RegionName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedToUserId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LocalityId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LocalityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LocalityId })
            </td>
        </tr>
    }

</table>
