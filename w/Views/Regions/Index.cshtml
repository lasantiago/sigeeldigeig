@model IEnumerable<ORM.DC_Maestros.Region>

@{
    ViewBag.Title = @Localization.es_DO.Regions;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localization.es_DO.Regions</h2>

<p>
    @Html.ActionLink(@Localization.es_DO.Actions_Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedToUserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Regions", new { id = @item.RegionId })">@item.RegionName</a>
            </td>
            <td>
                <a href="@Url.Action("Details", "Countries", new { id = @item.CountryId })">@item.Country.CountryName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedToUserId)
            </td>
            <td>
                @Html.ActionLink(@Localization.es_DO.Actions_Edit, "Edit", new { id = item.RegionId }) |
                @Html.ActionLink(@Localization.es_DO.Actions_Details, "Details", new { id = item.RegionId }) |
                @Html.ActionLink(@Localization.es_DO.Actions_Delete, "Delete", new { id = item.RegionId })
            </td>
        </tr>
    }

</table>
