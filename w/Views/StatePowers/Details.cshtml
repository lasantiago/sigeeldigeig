@model ORM.DC_Maestros.StatePower

@{
    ViewBag.Title = @Localization.es_DO.Actions_Details;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localization.es_DO.Actions_Details</h2>

<div>
    <h4>@Localization.es_DO.StatePower</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StatePowerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StatePowerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateEntered)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateEntered)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedByUserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedByUserId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedByUserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedByUserId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedToUserId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedToUserId)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@Localization.es_DO.Actions_Edit, "Edit", new { id = Model.StatePowerId }) |
    @Html.ActionLink(@Localization.es_DO.Actions_BackToList, "Index")
</p>

<div class="container">
    <fieldset>
        <legend>@Localization.es_DO.InstitutionsInThisStatePower</legend>
    </fieldset>
    <table class=" table">
        <tr>
            <th>
                @Localization.es_DO.Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.Institutions)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Institutions", new { id = item.InstitutionId })">@item.InstitutionName</a>
                </td>
                <td>
                    @Html.ActionLink(@Localization.es_DO.Actions_Edit, "Edit", new { id = @item.InstitutionId }, new { @class = "btn " })
                    @Html.ActionLink(@Localization.es_DO.Actions_Delete, "Delete", new { id = @item.InstitutionId }, new { @class = "btn " })
                </td>
            </tr>
        }

    </table>
</div>

